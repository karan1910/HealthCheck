doctype html
html
  head
    title= 'Service Health Dashboard'
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="icon", type="image/png", href="https://image.ibb.co/d6mBv6/favicon.png")
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body
    div.container
      div.row(style='margin:20px; position:relative;')
        div(style='display:inline-block')
          img(src='https://image.ibb.co/ncUHv6/compro.png', alt='ComproDLS', style='height:70px')
        div(style='position:absolute; bottom:0; display:inline-block;')
          h3(style="margin-bottom: 0;color: chocolate;") Service Health Dashboard
      hr(style="border: 0; background-color: #eeeeee; border-top: 3px solid #117711; height: 16px;")
      ul.nav.nav-tabs(role = 'tablist')
        each tab, i in obj.tabs
          li(role='presentation')
            a(aria-controls = i + 1, role='tab', data-toggle='tab', href='#' + tab + 'PROD') #{tab}
      div.tab-content
        each tab, i in obj['full-tabs']
          - var id = tab;
            div.tab-pane(role='tabpanel', id = id)
              table.table.table-striped(style = "border:1px solid #cccccc")
                thead
                  tr
                    th Component
                    th Status
                tbody
                  - var testArr = obj[tab].tests;
                  - for(var j = 0; j < testArr.length; j++){
                      tr
                        td #{testArr[j]}
                        td
                          if obj[tab][testArr[j]] == 200
                            img(src='https://status.aws.amazon.com/images/status0.gif', alt='Working')
                          else
                            img(src='https://status.aws.amazon.com/images/status3.gif', alt='Not-Working')
                  - }
  script(src='http://yourjavascript.com/109152181087/jquery.js')